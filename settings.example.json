{
  "mcp_servers": [
    {
      "name": "filesystem",
      "description": "Filesystem MCP server for file operations",
      "transport": "stdio",
      "command": "npx",
      "args": ["@modelcontextprotocol/server-filesystem"],
      "env": {
        "MCP_FILESYSTEM_ROOT": "/Users/username/Documents"
      },
      "enabled": true
    },
    {
      "name": "github",
      "description": "GitHub MCP server for repository operations",
      "transport": "stdio",
      "command": "npx",
      "args": ["@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_TOKEN": "your-github-token-here"
      },
      "enabled": false
    },
    {
      "name": "postgres",
      "description": "PostgreSQL MCP server for database operations",
      "transport": "stdio",
      "command": "npx",
      "args": ["@modelcontextprotocol/server-postgres"],
      "env": {
        "DATABASE_URL": "postgresql://user:password@localhost:5432/dbname"
      },
      "enabled": true
    },
    {
      "name": "remote-sse",
      "description": "Remote MCP server using SSE transport",
      "transport": "sse",
      "endpoint": "https://example.com/mcp/sse",
      "headers": {
        "Authorization": "Bearer your-token-here",
        "X-Custom-Header": "custom-value"
      },
      "enabled": false
    },
    {
      "name": "remote-http",
      "description": "Remote MCP server using streamable HTTP transport",
      "transport": "streamable_http",
      "endpoint": "https://example.com/mcp/stream",
      "headers": {
        "Authorization": "Bearer your-token-here",
        "Content-Type": "application/json"
      },
      "enabled": false
    }
  ],
  "listen_addr": "http://127.0.0.1:8091/mcp",
  "transport": "streamable_http"
}
